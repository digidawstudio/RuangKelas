<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_repos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_diikuti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/text_Repos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repo"
            android:textSize="14sp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_repos"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/text_diikuti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="di ikuti"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_diikuti"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/text_pengikut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengikut"
            android:layout_marginTop="-8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_pengikut"
            app:layout_constraintRight_toLeftOf="@+id/text_diikuti"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toRightOf="@+id/text_Repos"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.517" />

        <TextView
            android:id="@+id/tv_pengikut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            app:layout_constraintRight_toLeftOf="@+id/tv_diikuti"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_repos"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.484" />

        <TextView
            android:id="@+id/text_edit_profile"
            android:layout_width="156dp"
            android:layout_height="18dp"
            android:text="Ubah Profile Anda"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_pengikut"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.049"
            android:textAlignment="center"
            android:background="@drawable/grey_border"/>
    </android.support.constraint.ConstraintLayout>

</merge>